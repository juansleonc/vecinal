<div class="message-container" style="border: 2px solid #EFE7E4; padding: 10px 25px 20px; border-radius: 0 0 30px 30px;
  font-family: Arial, Helvetica, sans-serif;">
  <%= image_tag root_url(subdomain: 'www').chomp('/') + asset_url('condomedia.png'), width: '150' %>
  <hr style="border-top: 1px solid #B3B4B6;"/>
  <h3 style="color: #2566BE; margin-bottom: 5px;">
    <%= t 'mailer.new_message.hello', name: @buyer.full_name %>,
  </h3>
  <p><%= t 'mailer.new_purchase.have_new_purchase', deal_name: @deal.title %>.</p>
  <p><%= t 'mailer.new_sale.visit_condomedia' %>.</p>
</div>
<div style="font-family: Arial, Helvetica, sans-serif; color: #7F7F7F; padding: 10px 15px; font-size: 90%;">
  <%= t 'mailer.new_message.sent_from_cm' %><br/>
  <%= t 'mailer.new_message.sent_to', name: @buyer.full_name %><br/>
  <%= t 'mailer.new_message.cm_inc' %><br/><br/>
  <%= link_to 'condo-media.com', 'http://www.condo-media.com', target: '_blank' %> |
  <%= link_to t('general.privacy_policy'), send("privacy_#{I18n.locale.to_s}_path"), target: '_blank' %> |
  <%= link_to t('general.terms_of_service'), send("terms_#{I18n.locale.to_s}_path"), target: '_blank' %>
</div>

<br><br>
<div>
  <% 
  if @buyer.accountable.class.name == 'Company'
    if @buyer.accountable.setting_for('append_message_to_outgoing_notifications') != 'yes' %>
    <%= @buyer.accountable.setting_for('append_message_to_outgoing_notifications').html_safe  %>
  <% end 
  else
    if @buyer.accountable.company.setting_for('append_message_to_outgoing_notifications') != 'yes'
      @buyer.accountable.company.setting_for('append_message_to_outgoing_notifications')
    end
  end
  %>
</div>
 <br><br>
<div>
  <% if @deal.setting_for('notification_mail_signature') != 'yes' %>
    <%= @deal.setting_for('notification_mail_signature').html_safe  %>
  <% end %>
</div>
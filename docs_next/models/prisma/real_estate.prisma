// Nota: El backend objetivo es Rails API-only con ActiveRecord.
// Este esquema Prisma queda como referencia hist√≥rica de modelado.
model Listing {
  id           String   @id @default(uuid())
  buildingId   String
  apartmentId  String?
  title        String
  description  String
  price        Decimal  @db.Decimal(12,2)
  bedrooms     Int
  bathrooms    Int
  areaM2       Int?
  status       ListingStatus @default(draft)
  publishedAt  DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([buildingId, status])
}

enum ListingStatus {
  draft
  published
  unpublished
  sold
}

model Lead {
  id         String   @id @default(uuid())
  listingId  String
  name       String
  email      String
  phone      String?
  message    String?
  createdAt  DateTime @default(now())

  @@index([listingId])
}

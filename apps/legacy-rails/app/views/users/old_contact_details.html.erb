<% @navbar_hidden_xs = true %>
<div class="container-fluid devise-contact-details">
  <div class="row">
    <div class="col-md-6 col-sm-8 col-xs-12 authentication-form">
      <div class="devise contact-information">
        <h1><%= t 'finish_registration.application' %></h1>
        <p><%= t('contact_details.add_contact_details', building: current_building.name) %></p>

        <div class="row">
          <%= condomedia_form_for(@contact_details, url: users_set_contact_details_path, auto_placeholder: @contact_details.new_record?) do |f| %>
            <div class="col-sm-12">
              <%= render 'shared/model_errors', resource: @contact_details %>
            </div>

            <div class="form-group col-sm-12">
              <%= f.text_field :apartment_number, class: 'form-control' %>
            </div>
            <div class="form-group col-sm-6">
              <%= f.text_field :phone, class: 'form-control' %>
            </div>
            <div class="form-group col-sm-6">
              <%= f.text_field :move_in_date, class: 'form-control trigger-datetimepicker' %>
            </div>
            <div class="form-group col-sm-6">
              <%= f.text_field :emergency_contact_name, class: 'form-control' %>
            </div>
            <div class="form-group col-sm-6">
              <%= f.text_field :emergency_contact_phone, class: 'form-control' %>
            </div>
            <div class="form-group col-sm-12">
              <%= f.select :user_type, ContactDetails::USER_TYPES.map { |ut| [t("contact_details.#{ut}"), ut] }, {}, class: 'form-control' %>
            </div>
            <div class="col-sm-12">
              <center>
                <%= f.submit t('general.continue'), class: 'btn btn-success btn-lg' %>
              </center>
            </div>
          <% end %>
        </div>
        <div class="col-sm-12 no-padding">
          <%= link_to t('general.cancel'), finish_registration_cancel_path %>
        </div>
      </div>
    </div>
  </div>
</div>
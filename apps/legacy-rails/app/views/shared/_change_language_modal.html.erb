<div class="modal fade form-new-object" id="change-language-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title"><%= t 'footer.language.change' %></h4>
      </div>
      <div class="modal-body">
        <div class="list-group">
          <% CM_LOCALES.each do |loc| %>
            <% active = 'active' if locale == loc.to_sym %>
            <%= link_to t("footer.language.#{loc}"), change_language_path(lang: loc), class: "list-group-item #{active}" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
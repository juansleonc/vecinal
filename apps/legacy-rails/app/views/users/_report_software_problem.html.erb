<div class="modal fade form-new-object" id="report-software-problem">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
        <strong><%= t 'general.report_software_problem' %></strong>
      </div>
      <div class="modal-body">
        <% @report_software_problem_form ||= ContactForm.new %>
        <%= form_for(@report_software_problem_form, url: users_create_report_software_problem_path, remote: true) do |f| %>
          <div class="form-errors-container"></div>
          <%= f.hidden_field :name, value: current_user.full_name %>
          <%= f.hidden_field :email, value: current_user.email %>
          <div class="form-group">
            <%= f.text_field :subject, class: 'form-control', placeholder: 'Subject' %>
          </div>
          <div class="form-group">
            <%= f.text_area :message, class: 'form-control js-auto-size', placeholder: 'Description' %>
          </div>
          <div class="buttons-right">
            <%= f.submit t('public_pages.contact.send'), class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-xs-12 content-center">
      <div  class="header ">
        <h3><%= t('devise.welcome') %></h3>
        <h3 class="last_h3"><%= t('devise.set_change_your_password') %></h3>
      </div>
      
      <div class="devise reset-form col-xs-12">
        <%= form_for current_user, url: user_update_password_path(current_user),
          html: { id: 'profile-and-notifications', class: 'switchable visible' } do |f|  %>

          <%= render 'shared/model_errors', resource: current_user %>

          <%= f.hidden_field :reset_password_token %>
          <div class="form-group row">
            <div class="col-sm-12">
              <%= f.password_field :password, autofocus: true,placeholder: t('activerecord.attributes.user.password'), autocomplete: "off", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-12">
              <%= f.password_field :password_confirmation,placeholder: t('activerecord.attributes.user.password_confirmation'), autocomplete: "off", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row error">
            <%= t 'general.change_password_confirmation'%>
          </div>
          <div class="form-group row">
            <div class="col-sm-12">
              <%= check_box_tag 'terms', true ,class: 'form-control' %>
              <%= t('general.terms_conditions').html_safe %>
            </div>
          </div>
          <div class="row">
            
            <%= f.submit t('general.continue').upcase, class: 'btn btn-primary btn-sm', id: 'btn-change-password', disabled:true %>

          </div>
        <% end %>
      </div>
    </div>
    
  </div>
</div>
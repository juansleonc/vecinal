<% @submenu_title = 'Search'; @action_for_search = search_invites_received_company_path(current_user.accountable, query: params[:query], responsible: params[:responsible], order: params[:order], b: params[:b], c: params[:c]) %>

<div class="inner-section col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-2 col-sm-9 col-sm-offset-2 contacts-index">

  <%= render 'shared/search_results_headers', current_model: (t 'invites.received') %>

  <% if @invites_received.present? %>
    <div class="contacts-panels row load-more-at-bottom" id="contacts" data-next-path="<%= @next_path %>">
      <%= render partial: 'invites/invite_received', collection: @invites_received %>
    </div>
  <% else %>
    <%= render 'shared/empty_items', icon: 'fa-user-plus', objects: Invite.model_name.human(count: 2) %>
  <% end %>

</div>

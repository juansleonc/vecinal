<div class="col-lg-3 col-sm-4 col-xs-6 photo-container" id="<%= image.id %>">
  <div class="image-container">
    <%= link_to image.image.url(:original), data: { lightbox: true } do %>
      <%= image_tag image.image.url(:thumb) %>
    <% end %>
  </div>

  <% if can? :update, image.imageable %>
    <div class="dropdown">
      <%= link_to '#', data: { toggle: 'dropdown' }, class: 'dropdown-toggle' do %>
        <i class="fa fa-pencil-square"></i>
      <% end %>
      <ul class="dropdown-menu">
        <li><%= link_to t('images.make_cover'), set_as_cover_image_path(image), remote: true %></li>
        <li>
          <%= confirm_destroy image_path(image), remote: true do %>
            <%= t 'general.delete', object_name: '' %>
          <% end %>
        </li>
      </ul>
    </div>
  <% end %>
</div>
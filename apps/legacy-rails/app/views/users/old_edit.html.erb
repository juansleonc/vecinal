<% @submenu_title = t 'general.edit_record', record_name: @user.full_name
  @submenu_item = 'page_roles'
%>

<div class="inner-section col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-2 col-sm-9 col-sm-offset-2">
  <div class="well clearfix">
    <h1>
      <i class="fa fa-users"></i>
      <span class="black"><%= t('general.edit_record', record_name: @user.full_name) %></span>
    </h1>

    <div class="row blue-borders">
      <%= condomedia_form_for [@company, @user] do |f| %>
        <%= render 'shared/model_errors', resource: @user %>

        <div class="col-sm-12"><h4 class="blue"><%= t 'devise.user_details' %></h4></div>

        <div class="form-group col-sm-6">
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group col-sm-6">
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>

        <%= render @user.edit_form_fields_by_role, f: f %>

        <div class="col-xs-12"><hr/></div>

        <div class="form-group col-sm-12">
          <%= render 'images/logo_field', f: f, model_object: @user %>
        </div>

        <div class="col-xs-12"><hr/></div>

        <div class="col-xs-12 action-buttons">
          <%= f.submit t('general.save'), class: 'btn btn-primary' %>
          <%= link_to t('general.cancel'), user_dashboard, class: 'cancel' %>
        </div>

      <% end %>
    </div>
  </div>
</div>
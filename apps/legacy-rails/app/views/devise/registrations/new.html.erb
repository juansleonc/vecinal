<% @page_title = 'Sign up | Condo Media'; map_user_invite(resource, params[:invite]) %>

<% content_for :meta_tags do %>
  <meta name="description" content="Sign up for Condo Media and connect with your community. Create an account to start sharing with the people that lives the closest to you. Itâ€™s easy to register." >
<% end %>

<div class="container">
  <div class="row">
    <div class="devise col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
      <%= link_to root_path do %>
        <%= image_tag 'condomedia_white.png', width: 200, class: 'cm-home-logo' %>
      <% end %>
      <%= condomedia_form_for(resource, as: resource_name, url: registration_path(resource_name), auto_placeholder: true) do |f| %>
        <%= f.hidden_field :invite_id, value: params[:invite] %>

        <%= render 'shared/model_errors', resource: resource %>

        <% if @accountable %>
          <%= f.hidden_field :accountable_type, value: @accountable.class.to_s %>
          <%= f.hidden_field :accountable_id, value: @accountable.id %>
        <% end %>

        <div class="row">

          <div class="input-group">
            <span class="input-group-addon first-name-icon"><i class="fa fa-user-o"></i></span>
            <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
          </div>

          <div class="input-group space-top">
            <span class="input-group-addon last-name-icon"><i class="fa fa-users"></i></span>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>

            <%= f.hidden_field :locale, value: I18n.locale %>

            <div class="input-group space-top">
              <span class="input-group-addon email-icon"><i class="fa fa-envelope-o""></i></span>
              <%= f.email_field :email, class: 'form-control' %>
            </div>

            <div class="input-group space-top">
              <span class="input-group-addon lock-icon"><i class="fa fa-lock"></i></span>
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            </div>

            
            <%= f.submit t('devise.sign_up').upcase, class: 'btn btn-primary btn-sm' %>
        </div>
      <% end %>
      <p class="bottom-links">
        <%= link_to t('general.back').upcase, social_login_path, class: 'keep-left' %>
        <%= link_to t('devise.sign_in').upcase, new_session_url(:user, subdomain: 'www') %>
        <%= link_to t('devise.need_help').upcase, need_help_url(subdomain: 'www') %>
      </p>
    </div>

  </div>
</div>
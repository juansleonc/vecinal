LEGACY_DB_HOST=db

# API Next Rails
DATABASE_URL=postgres://postgres:postgres@db:5432/vecinal_api
REDIS_URL=redis://redis:6379/0

# Auth / JWT
# Algoritmo: RS256 (recomendado) o HS256
JWT_ALG=RS256
# Para HS256 (alternativa):
# JWT_SECRET=change-me
# Para RS256: lista JSON de claves privadas {kid,pem}
# Ejemplo DEV: un valor será generado automáticamente si no se define
# JWT_PRIVATE_KEYS='[{"kid":"key-2025-08","pem":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"}]'

# Auth / Refresh Tokens
REFRESH_TOKEN_MAX_PER_USER=5

# CI tests
DATABASE_TEST_URL=postgres://postgres:postgres@db:5432/vecinal_api_test

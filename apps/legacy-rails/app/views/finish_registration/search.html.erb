<% @submenu_title = t('general.search') %>

<div class="inner-section col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-2 col-sm-9 col-sm-offset-2 finish-registration-communities">

  <div class="nav-filter-pagination clearfix">
    <%= render 'shared/pagination_links' %>
  </div>

  <div class="cm-tabs">
    <div class="buttons-block search-selector">
      <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
          <i class="fa fa-search"></i>
          <span class="text"><%= @model_name %></span>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li>
            <%= link_to Building.model_name.human(count: 2).capitalize, '#', data: { action: finish_registration_search_buildings_path } %>
          </li>
          <li>
            <%= link_to Company.model_name.human(count: 2).capitalize, '#', data: { action: finish_registration_search_companies_path } %>
          </li>
        </ul>
      </div>
      <button type="button" class="btn btn-default re-search"><i class="fa fa-refresh"></i></button>
    </div>
    <div class="white-bar with-border"></div>
  </div>

  <% if @communities.present? %>
    <%= form_for current_user, url: finish_registration_set_role_path, method: :put, remote: true do |f| %>
      <%= f.hidden_field :accountable_type, value: @communities.take.class.name %>
      <%= f.hidden_field :accountable_code %>
      <div class="cm-gallery-grid clearfix" id="communities">
        <%= render partial: 'finish_registration/community', collection: @communities %>
      </div>
    <% end %>
  <% else %>
    <%= render 'shared/empty_items', icon: 'fa-circle-o', objects: t('general.submenu.communities').downcase %>
  <% end %>

</div>

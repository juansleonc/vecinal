<% if @poll_vote.persisted? %>
  $('.poll#poll-<%= @poll_vote.poll_id %> form').replaceWith('<%= j render("poll_votes/update_vote_form", poll_vote: @poll_vote) %>');
  $('.poll#poll-<%= @poll_vote.poll_id %> .votes span.count').text('<%= @poll_vote.poll.poll_votes.count %>');
  $('.modal#poll-votes-modal-<%= @poll_vote.poll_id %> .modal-body').append("<%= j render('polls/vote', vote: @poll_vote) %>");
  $('[data-toggle="popover"]').popover();
  set_poll_answer_bg_width();
<% end %>
<% @submenu_title = t('general.submenu.communities'); @submenu_item = 'communities' %>

<div class="inner-section col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-2 col-sm-9 col-sm-offset-2 timeline-view">

  <%= render 'pages/header', model_object: @building %>

  <% form_url = root_url(subdomain: 'www').chomp('/') + company_building_path(@building.company, @building) %>
  <%= render 'pages/about', model_object: @building, form_url: form_url, modal_destroy_target: '#destroy-building-modal' %>

</div>
<% if can?(:destroy, @building) %>
  <div class="modal fade form-new-object" id="destroy-building-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title">Delete Building</h4>
        </div>
        <div class="modal-body">
          <%= form_tag [@building.company, @building], method: :delete, remote: true,
            autocomplete: "off" do %>
            <div class="form-errors-container"></div>
            <div class="panel panel-default information">
              <div class="panel-body red-bg">
                <i class="fa fa-exclamation-triangle red"></i>
                <p class="black">
                  Deleting your Page means that nobody will be able to see or find it. Once you click delete, all contacts, posts, and information associated with this page will be erased, and you will not be able to recover it.
                </p>
              </div>
            </div>
            <div class="form-group">
              <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Please insert your password' %>
            </div>
            <div class="buttons-right">
              <%= submit_tag t('general.confirm'), class: 'btn btn-primary' %>
              <button type="button" class="btn btn-default" data-dismiss="modal"><%= t 'general.cancel' %></button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= form_for Review.new, remote: true do |f| %>
  <div class="new-review-errors-container"></div>
  <%= f.hidden_field :reviewable_id, value: reviewable.id %>
  <%= f.hidden_field :reviewable_type, value: reviewable.class.name %>
  <%= f.hidden_field :rank %>
  <div class="stars-container">
    <div class="stars">
      <% Review::MAX_RANK.times do |i| %>
        <%= link_to '#', data: { rank: i + 1, name: t('reviews.ranks')[i] }, class: 'review-star' do %>
          <i class="fa fa-star"></i>
        <% end %>
      <% end %>
    </div>
    <p class="rank-name"></p>
  </div>
  <div class="form-group with-icon">
    <%= f.text_area :comment, placeholder: t('reviews.tell_people'), class: 'form-control js-auto-size' %>
    <%= link_to_add_attachment f %>
  </div>
  <div class="form-group no-margin">
    <div class="row attachments-container"></div>
  </div>
  <div class="clearfix">
    <%= f.submit 'Post', class: 'btn btn-primary pull-right' %>
  </div>
<% end %>
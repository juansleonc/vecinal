<% @submenu_title = t 'general.edit_record', record_name: Business.model_name.human
  @submenu_item = 'home'
%>
<div class="inner-section col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-2 col-sm-9 col-sm-offset-2">
  <div class="well clearfix">
    <h1>
      <i class="fa fa-pencil-square-o"></i>
      <span class="black">
        <%= t('general.edit_record', record_name: Business.model_name.human) + ' ' + t('general.info').downcase %>
      </span>
    </h1>

    <div class="pull-right stripe-validation">
      <% if @business.stripe_user_id.blank? %>
        <span class="medium-info italic">
          <%= t 'general.connect_with' %> <%= link_to t('general.stripe'), connect_to_stripe(@business) %>
        </span>
      <% else %>
        <span class="medium-info italic"><%= t 'general.connected_with' %> <%= t('general.stripe') %></span>
        <i class="fa fa-check-circle green"></i>
      <% end %>
    </div>

    <div class="blue-borders">
      <%= render 'form' %>
    </div>

  </div>
</div>
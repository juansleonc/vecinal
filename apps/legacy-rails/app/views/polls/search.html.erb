<% @submenu_title = 'Search'; @action_for_search = search_polls_path(query: params[:query], responsible: params[:responsible], order: params[:order], b: params[:b], c: params[:c]) %>

<div class="inner-section col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-2 col-sm-9 col-sm-offset-2 polls-index">

  <%= render 'shared/search_results_headers', current_model: Poll.model_name.human(count: 2).capitalize %>

  <% if @polls.present? %>
     <div class="cols-divided-sm-2 load-more-at-bottom" id="polls" data-next-path="<%= @next_path %>">
      <%= render @polls %>
    </div>
  <% else %>
    <%= render 'shared/empty_items', icon: 'fa-bar-chart', objects: Poll.model_name.human(count: 2) %>
  <% end %>

</div>

<div class="container">
  <div class="row">
    <div class="devise need-help col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
      <%= link_to root_path do %>
        <%= image_tag 'condomedia_white.png', width: 200, class: 'cm-home-logo' %>
      <% end %>
      <% url = params[:devise_need_help] || password_path(resource_name) %>
      <%= condomedia_form_for(resource, as: resource_name, url: url, auto_placeholder: true ) do |f| %>
        <%= render 'shared/model_errors', resource: resource %>
        <label><%= t 'devise.select_issue' %></label>
        <div class="form-group">
          <div class="radio">
            <label>
              <%= radio_button_tag :devise_need_help, password_path(resource_name), url == password_path(resource_name) %>
              <%= t('devise.forgot_my_password') %>
            </label>
          </div>
          <div class="radio">
            <label>
              <%= radio_button_tag :devise_need_help, confirmation_path(resource_name), url == confirmation_path(resource_name) %>
              <%= t('devise.didnt_receive_confirmation_instructions') %>
            </label>
          </div>
        </div>

        <label><%= t 'devise.recovery_email' %></label>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-envelope-o""></i></span>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <%= f.submit t('devise.next').upcase, class: 'btn btn-primary btn-sm' %>
      <% end %>
      <p class="bottom-links">
        <%= link_to t('general.back').upcase, social_login_path, class: 'keep-left' %>
        <%= link_to t('devise.sign_in').upcase, new_session_url(:user, subdomain: 'www') %>
        <%#= link_to t('devise.sign_up').upcase, new_registration_url(:user, subdomain: 'www') %>
      </p>
    </div>
  </div>
</div>